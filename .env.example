# WhatsApp Bot Configuration
# Copy this file to .env and fill in your actual values

# WhatsApp Configuration
GROUP_CHAT_ID=your_whatsapp_group_chat_id_here
WHATSAPP_SESSION_PATH=./session
PUPPETEER_HEADLESS=true
CHROME_EXECUTABLE_PATH=
MESSAGE_DELAY=1000
MAX_RETRIES=3

# Owner Configuration
OWNER_NUMBER=6289813413636,628221121999

# Database Configuration
DB_TYPE=sqlite
# For SQLite
SQLITE_PATH=./data/bot-kr.db

# For MySQL (if DB_TYPE=mysql)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=bot_kr
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_TO=kakaramaroom@gmail.com
EMAIL_FROM=your_email@gmail.com
EMAIL_ENABLED=true

# Commission Configuration (in Rupiah)
COMMISSION_AMEL=50000
COMMISSION_KR=45000
COMMISSION_APK=40000
COMMISSION_DEFAULT=30000

# Report Configuration
REPORT_TIMEZONE=Asia/Jakarta
DAILY_REPORT_TIME=0 12 * * *
WEEKLY_REPORT_TIME=0 9 * * 1
MONTHLY_REPORT_TIME=0 10 1 * *
COMPANY_NAME=SKY HOUSE
INCLUDE_CHARTS=true
EXPORT_FORMAT=xlsx

# Business Rules
WORKING_HOURS_START=08:00
WORKING_HOURS_END=22:00
LOCATIONS=SKY1,SKY2,SKY3
PAYMENT_METHODS=Cash,Transfer
MIN_BOOKING_DURATION=1
MAX_BOOKING_DURATION=24
AUTO_CLEANUP_DAYS=90

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./data/bot.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true

# Performance Settings
CACHE_ENABLED=true
CACHE_TTL=300
BATCH_SIZE=100
MAX_CONCURRENT_OPS=5

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# Security Settings
ENABLE_RATE_LIMIT=true
MAX_MESSAGES_PER_MINUTE=10
ALLOWED_USERS=
ENCRYPT_DATA=false
